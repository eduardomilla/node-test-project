<%- contentFor('body') %>

<section class="page-header">
    <div class="container">
        <h1 class="animate__animated animate__fadeInDown">¡Juega Tetris!</h1>
        <p class="animate__animated animate__fadeIn animate__delay-1s">Diviértete mientras esperas tu cotización de drywall</p>
    </div>
</section>

<section class="tetris-section">
    <div class="container">
        <div class="game-wrapper">
            <div class="container py-5">
                <div class="text-center mb-4">
                    <h1 class="display-4 gradient-text">Tetris</h1>
                    <p class="lead fade-in">Relájate un momento y disfruta del clásico juego</p>
                </div>
                
                <div class="row g-4">
                    <div class="col-lg-6 d-flex flex-column justify-content-center mb-4 mb-lg-0">
                        <div class="game-instructions float-animation">
                            <h3 class="mb-3"><i class="fas fa-gamepad me-2"></i>Instrucciones</h3>
                            <ul class="staggered-fade-in">
                                <li><i class="fas fa-arrow-left"></i> / <i class="fas fa-arrow-right"></i> - Mover izquierda/derecha</li>
                                <li><i class="fas fa-arrow-up"></i> - Rotar pieza</li>
                                <li><i class="fas fa-arrow-down"></i> - Mover hacia abajo</li>
                                <li><span class="key-badge">Espacio</span> - Caída rápida</li>
                                <li><span class="key-badge">P</span> - Pausar/Reanudar</li>
                            </ul>
                            <div class="mt-4">
                                <button id="playButton" class="btn btn-primary btn-lg btn-pulse">
                                    <i class="fas fa-play me-2"></i>Jugar
                                </button>
                                <button id="resetButton" class="btn btn-outline-light ms-2 hover-glow">
                                    <i class="fas fa-redo me-2"></i>Reiniciar
                                </button>
                            </div>
                            
                            <div class="mobile-instructions mt-4 d-md-none">
                                <h4><i class="fas fa-mobile-alt me-2"></i>En dispositivos móviles:</h4>
                                <ul>
                                    <li>Desliza para mover y rotar</li>
                                    <li>Toca la pantalla para rotar</li>
                                    <li>Doble toque para caída rápida</li>
                                    <li>O usa los botones táctiles abajo</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-6">
                        <div class="tetris-container shadow-hover mx-auto">
                            <div class="game-area-container">
                                <div class="game-header">
                                    <div>
                                        <span>Nivel: </span>
                                        <span id="levelDisplay" class="highlight-text">1</span>
                                    </div>
                                    <div>
                                        <span>Líneas: </span>
                                        <span id="linesDisplay" class="highlight-text">0</span>
                                    </div>
                                    <div>
                                        <span>Puntos: </span>
                                        <span id="scoreDisplay" class="highlight-text">0</span>
                                    </div>
                                </div>
                                <canvas id="tetris" width="240" height="400" class="mx-auto d-block"></canvas>
                                <div id="gameMessage" class="game-message fade-in">
                                    <p>Presiona Jugar para comenzar</p>
                                </div>
                            </div>
                            <div class="next-piece-container">
                                <h4>Siguiente</h4>
                                <canvas id="nextPiece" width="80" height="80" class="mx-auto d-block"></canvas>
                            </div>
                            
                            <!-- Teclado flotante para móviles -->
                            <div class="virtual-keyboard d-md-none">
                                <div class="keyboard-container">
                                    <div class="keyboard-title">
                                        <h5><i class="fas fa-gamepad me-2"></i>Controles</h5>
                                    </div>
                                    <div class="keyboard-layout">
                                        <table class="keyboard-table">
                                            <tr>
                                                <td></td>
                                                <td>
                                                    <button id="touchRotate" class="key-btn rotate-btn" aria-label="Rotar">
                                                        <i class="fas fa-arrow-up"></i>
                                                    </button>
                                                </td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <button id="touchLeft" class="key-btn left-btn" aria-label="Izquierda">
                                                        <i class="fas fa-arrow-left"></i>
                                                    </button>
                                                </td>
                                                <td>
                                                    <button id="touchDown" class="key-btn down-btn" aria-label="Abajo">
                                                        <i class="fas fa-arrow-down"></i>
                                                    </button>
                                                </td>
                                                <td>
                                                    <button id="touchRight" class="key-btn right-btn" aria-label="Derecha">
                                                        <i class="fas fa-arrow-right"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td>
                                                    <button id="touchDrop" class="key-btn drop-btn" aria-label="Caída rápida">
                                                        <i class="fas fa-angle-double-down"></i>
                                                    </button>
                                                </td>
                                                <td></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="keyboard-actions">
                                        <button id="keyboardPlayPause" class="key-action-btn play-btn" aria-label="Pausar/Reanudar">
                                            <i class="fas fa-play me-1"></i> / <i class="fas fa-pause me-1"></i>
                                            <span>Jugar/Pausar</span>
                                        </button>
                                        <button id="keyboardReset" class="key-action-btn reset-btn" aria-label="Reiniciar">
                                            <i class="fas fa-redo me-1"></i>
                                            <span>Reiniciar</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-5">
                    <div class="col-12">
                        <div class="card shadow-hover fade-in">
                            <div class="card-body">
                                <h3 class="card-title"><i class="fas fa-trophy me-2"></i>Récords</h3>
                                <div class="table-responsive">
                                    <table class="table table-dark">
                                        <thead>
                                            <tr>
                                                <th>Nivel</th>
                                                <th>Líneas</th>
                                                <th>Puntuación</th>
                                                <th>Fecha</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>10</td>
                                                <td>100</td>
                                                <td>10,000</td>
                                                <td>10/04/2024</td>
                                            </tr>
                                            <tr>
                                                <td>8</td>
                                                <td>80</td>
                                                <td>8,000</td>
                                                <td>05/04/2024</td>
                                            </tr>
                                            <tr>
                                                <td>5</td>
                                                <td>50</td>
                                                <td>5,000</td>
                                                <td>01/04/2024</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 