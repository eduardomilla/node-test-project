<%- contentFor('body') %>

<section class="hero-small py-5 bg-dark text-white position-relative overflow-hidden">
    <div class="container text-center py-5">
        <h1 class="display-4 fw-bold" data-aos="fade-up">Contáctanos</h1>
        <p class="lead" data-aos="fade-up" data-aos-delay="200">Estamos aquí para ayudarte con tu próximo proyecto</p>
        <div class="construction-element triangle" style="width: 120px; height: 120px; top: 20%; left: 5%;"></div>
        <div class="construction-element circle" style="width: 80px; height: 80px; top: 70%; left: 15%;"></div>
        <div class="construction-element square" style="width: 100px; height: 100px; top: 30%; right: 10%;"></div>
    </div>
</section>

<section class="contact-section py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-5" data-aos="fade-right">
                <div class="contact-info-card shadow h-100">
                    <div class="section-title mb-4">
                        <h2 class="h3 fw-bold gradient-text">Información de Contacto</h2>
                        <div class="title-separator"></div>
                    </div>
                    
                    <div class="contact-items">
                        <div class="contact-item hover-float" data-aos="fade-up" data-aos-delay="100">
                            <div class="contact-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="contact-text">
                                <h4>Dirección</h4>
                                <p>Av. Principal 123, Ciudad</p>
                            </div>
                        </div>
                        
                        <div class="contact-item hover-float" data-aos="fade-up" data-aos-delay="200">
                            <div class="contact-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="contact-text">
                                <h4>Teléfono</h4>
                                <p>+51 123 456 789</p>
                            </div>
                        </div>
                        
                        <div class="contact-item hover-float" data-aos="fade-up" data-aos-delay="300">
                            <div class="contact-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="contact-text">
                                <h4>Email</h4>
                                <p>info@drywallpro.com</p>
                            </div>
                        </div>
                        
                        <div class="contact-item hover-float" data-aos="fade-up" data-aos-delay="400">
                            <div class="contact-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="contact-text">
                                <h4>Horario de Atención</h4>
                                <p>Lunes a Viernes: 9:00 AM - 6:00 PM<br>
                                Sábados: 9:00 AM - 1:00 PM</p>
                            </div>
                        </div>
                    </div>

                    <div class="social-connect mt-4" data-aos="fade-up">
                        <h4 class="text-center mb-3">Conecta con nosotros</h4>
                        <div class="contact-social-links">
                            <a href="https://wa.me/51123456789" class="contact-social-icon whatsapp">
                                <i class="fab fa-whatsapp"></i>
                            </a>
                            <a href="https://facebook.com/drywallpro" class="contact-social-icon facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="https://instagram.com/drywallpro" class="contact-social-icon instagram">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="https://linkedin.com/company/drywallpro" class="contact-social-icon linkedin">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-7" data-aos="fade-left">
                <div class="contact-form-card shadow">
                    <div class="section-title mb-4">
                        <h2 class="h3 fw-bold gradient-text">Envíanos un Mensaje</h2>
                        <div class="title-separator"></div>
                    </div>
                    
                    <form class="contact-form">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="nombre" placeholder="Nombre completo" required>
                                    <label for="nombre"><i class="fas fa-user me-2"></i>Nombre Completo</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="email" placeholder="Email" required>
                                    <label for="email"><i class="fas fa-envelope me-2"></i>Email</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="tel" class="form-control" id="telefono" placeholder="Teléfono">
                                    <label for="telefono"><i class="fas fa-phone me-2"></i>Teléfono</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select class="form-select" id="asunto" required>
                                        <option value="" selected disabled>Selecciona un asunto</option>
                                        <option value="cotizacion">Solicitar Cotización</option>
                                        <option value="informacion">Información General</option>
                                        <option value="reclamo">Reclamo</option>
                                        <option value="otro">Otro</option>
                                    </select>
                                    <label for="asunto"><i class="fas fa-tag me-2"></i>Asunto</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <textarea class="form-control" id="mensaje" placeholder="Mensaje" style="height: 150px" required></textarea>
                                    <label for="mensaje"><i class="fas fa-comment me-2"></i>Mensaje</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-lg hover-glow">
                                        <i class="fas fa-paper-plane me-2"></i>Enviar Mensaje
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="map-section py-5 bg-light">
    <div class="container" data-aos="fade-up">
        <div class="section-title text-center mb-5">
            <h2 class="display-5 fw-bold">Nuestra Ubicación</h2>
